<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle12cDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>
        <property name="hibernate.proc.param_null_passing">true</property>

        <mapping class="com.tcbs.automation.bondlifecycle.CategoryType"/>
        <mapping class="com.tcbs.automation.bondlifecycle.ReferenceData"/>
        <mapping class="com.tcbs.automation.bondlifecycle.Business"/>
        <mapping class="com.tcbs.automation.bondlifecycle.Participant"/>
        <mapping class="com.tcbs.automation.bondlifecycle.RuleTemplate"/>

        <mapping class="com.tcbs.automation.bondlifecycle.BondBaseInfo"/>
        <mapping class="com.tcbs.automation.bondlifecycle.BondTimelineGroupMapping"/>
        <mapping class="com.tcbs.automation.bondlifecycle.BondTimelineGroup"/>
        <mapping class="com.tcbs.automation.bondlifecycle.BondTimeline"/>
        <mapping class="com.tcbs.automation.bondlifecycle.BondTimelineEvent"/>
        <mapping class="com.tcbs.automation.bondlifecycle.BondTimelineEngineInstance"/>
        <mapping class="com.tcbs.automation.bondlifecycle.BondEvent"/>
        <mapping class="com.tcbs.automation.bondlifecycle.BondEventExtend"/>
        <mapping class="com.tcbs.automation.bondlifecycle.ViewBondEventDetail"/>
        <mapping class="com.tcbs.automation.bondlifecycle.ApprovalHistory"/>

        <mapping class="com.tcbs.automation.bondlifecycle.EventName"/>
        <mapping class="com.tcbs.automation.bondlifecycle.EventType"/>
        <mapping class="com.tcbs.automation.bondlifecycle.Publicity"/>
        <mapping class="com.tcbs.automation.bondlifecycle.EventNamePublicity"/>
    </session-factory>
</hibernate-configuration>
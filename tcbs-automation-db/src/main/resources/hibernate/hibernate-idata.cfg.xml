<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle12cDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>

        <mapping class="com.tcbs.automation.config.idatatcanalysis.performance.PeIndicesSnapshotEntity"/>
        <mapping class="com.tcbs.automation.config.idatatcanalysis.performance.PePerformancePresentEntity"/>
        <mapping class="com.tcbs.automation.config.idatatcanalysis.performance.PePerformanceSnapshotEntity"/>
        <mapping class="com.tcbs.automation.config.idatatcanalysis.performance.PePortfolioPresentEntity"/>
        <mapping class="com.tcbs.automation.config.idatatcanalysis.performance.PePortfolioSnapshotEntity"/>
        <mapping class="com.tcbs.automation.config.idatatcanalysis.performance.PeTransactionSummaryEntity"/>
        <mapping class="com.tcbs.automation.config.idatatcanalysis.performance.PeWorkingDayEntity"/>
        <mapping class="com.tcbs.automation.iris.RiskConfigEntity"/>
        <mapping class="com.tcbs.automation.iris.RiskConditionEnity"/>
    </session-factory>
</hibernate-configuration>
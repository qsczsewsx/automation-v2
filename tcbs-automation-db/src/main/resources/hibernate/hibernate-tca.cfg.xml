<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.dialect">com.tcbs.automation.stoxplus.dialect.StoxPlusDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>

        <mapping class="com.tcbs.automation.tca.eventnews.EventNewsInfo"/>
        <mapping class="com.tcbs.automation.tca.activitynews.ActivityNewsInfo"/>
        <mapping class="com.tcbs.automation.tca.activitynews.ActivityNewsEnInfo"/>
        <mapping class="com.tcbs.automation.tca.message.Messages"/>
        <mapping class="com.tcbs.automation.tca.message.MessagesEn"/>
        <mapping class="com.tcbs.automation.tca.industry.StoxTbIndustry"/>
        <mapping class="com.tcbs.automation.tca.industry.StoxTbCompany"/>
    </session-factory>
</hibernate-configuration>
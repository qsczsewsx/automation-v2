<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle12cDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>

        <mapping class="com.tcbs.automation.ops.CpsBondholderCouponPayment"/>
        <mapping class="com.tcbs.automation.ops.BppContract"/>
        <mapping class="com.tcbs.automation.ops.BppDocument"/>
        <mapping class="com.tcbs.automation.ops.BppPledge"/>
        <mapping class="com.tcbs.automation.paymentprocess.Batch"/>
        <mapping class="com.tcbs.automation.paymentprocess.Transaction"/>
        <mapping class="com.tcbs.automation.pluto.ValuationEntity"/>
        <mapping class="com.tcbs.automation.pluto.DocumentEntity"/>
        <mapping class="com.tcbs.automation.ops.CategoryEntity"/>
    </session-factory>
</hibernate-configuration>
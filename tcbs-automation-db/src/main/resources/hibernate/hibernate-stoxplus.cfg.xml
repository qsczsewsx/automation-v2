<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.dialect">com.tcbs.automation.stoxplus.dialect.StoxPlusDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>

        <mapping class="com.tcbs.automation.stoxplus.stock.Company"/>
        <mapping class="com.tcbs.automation.stoxplus.stock.StoxTbCompany"/>
        <mapping class="com.tcbs.automation.stoxplus.stock.StoxTbEvents"/>
        <mapping class="com.tcbs.automation.stoxplus.stock.StoxTbIndustry"/>
    </session-factory>
</hibernate-configuration>
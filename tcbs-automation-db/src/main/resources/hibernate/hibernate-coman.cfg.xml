<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle12cDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>

        <mapping class="com.tcbs.automation.coman.AppliedBond"/>
        <mapping class="com.tcbs.automation.coman.AuditLog"/>
        <mapping class="com.tcbs.automation.coman.Interest"/>
        <mapping class="com.tcbs.automation.coman.InterestDetail"/>
        <mapping class="com.tcbs.automation.coman.ReferenceRate"/>
        <mapping class="com.tcbs.automation.coman.CouponTemplate"/>
        <mapping class="com.tcbs.automation.coman.CouponTimeline"/>
        <mapping class="com.tcbs.automation.coman.PaymentTimeline"/>
        <mapping class="com.tcbs.automation.coman.ReferBank"/>
        <mapping class="com.tcbs.automation.coman.ReferenceBase"/>
        <mapping class="com.tcbs.automation.coman.ReferenceRateDraft"/>
        <mapping class="com.tcbs.automation.coman.DefinitionRule"/>
        <mapping class="com.tcbs.automation.coman.DefaultBank"/>
        <mapping class="com.tcbs.automation.coman.BankGroupTbl"/>
    </session-factory>
</hibernate-configuration>
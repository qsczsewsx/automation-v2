<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServer2012Dialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>

        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortCustomerEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortBondTxnEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortCashBalEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortCashTxnEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortFundBalEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortFundTxnEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortRightEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortBondBalEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortStockBalEntity"/>
        <mapping class="com.tcbs.automation.tcbsdbapi2.MonthlyPortStockTxnEntity"/>

    </session-factory>
</hibernate-configuration>